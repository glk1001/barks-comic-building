<ReaderTreeView>:
    hide_root: True
    indent_level: root.TREE_VIEW_INDENT_LEVEL
    size_hint: (1, None)
    minimum_height: self.height

<MainTreeViewNode>:
    color: root.TEXT_COLOR
    background_color: root.BACKGROUND_COLOR
    size_hint: (None, None)
    size: root.NODE_SIZE
    halign: "left"
    valign: "middle"
    text_size: (self.width, self.height)

<CategoryTreeViewNode>:
    color: root.TEXT_COLOR
    background_color: root.BACKGROUND_COLOR
    size_hint: (None, None)
    height: root.NODE_HEIGHT
    width: root.NODE_WIDTH
    halign: "left"
    valign: "middle"
    text_size: (self.width, self.height)

<YearRangeTreeViewNode>:
    color: root.TEXT_COLOR
    background_color: root.BACKGROUND_COLOR
    size_hint: (None, None)
    height: root.NODE_HEIGHT
    width: root.NODE_WIDTH
    halign: "left"
    valign: "middle"
    text_size: (self.width, self.height)

<TreeViewRowNode@BoxLayout>:
    orientation: "horizontal"
    spacing: 0

<TitleTreeViewNode>:
    orientation: "vertical"
    spacing: 0
    size_hint_y: None
    height: dp(2 * self.LABEL_HEIGHT)
    minimum_height: self.height
    minimum_width: self.width

    num_label: num_label_id
    issue_label: issue_label_id
    title_label: title_label_id

    TreeViewRowNode:
        TreeViewButton:
            id: num_label_id
            parent: root
            bold: True
            color: root.NUM_LABEL_COLOR
            background_color: root.LABEL_BACKGROUND_COLOR
            color_selected: [0,0,1,1]
            bg_color: [1,0,1,1]
            size_hint: (None, None)
            width: root.NUM_LABEL_WIDTH
            height: root.LABEL_HEIGHT
            halign: "right"
            valign: "middle"
            text_size: (self.width, self.height)

        TitleTreeViewLabel:
            id: title_label_id
            parent: root
            color: root.TITLE_LABEL_COLOR
            background_color: root.LABEL_BACKGROUND_COLOR
            size_hint: (None, None)
            width: root.TITLE_LABEL_WIDTH
            height: root.LABEL_HEIGHT
            halign: "left"
            valign: "middle"
            text_size: (self.width, self.height)

    TreeViewRowNode:
        TitleTreeViewLabel:
            text: "   "
            parent: root
            color: (1.0, 1.0, 1.0, 1.0)
            background_color: root.LABEL_BACKGROUND_COLOR
            size_hint: (None, None)
            width: root.NUM_LABEL_WIDTH
            height: root.LABEL_HEIGHT
            halign: "right"
            valign: "middle"
            text_size: (self.width, self.height)

        TitleTreeViewLabel:
            id: issue_label_id
            parent: root
            italic: True
            color: root.ISSUE_LABEL_COLOR
            background_color: root.LABEL_BACKGROUND_COLOR
            size_hint: (None, None)
            width: root.ISSUE_LABEL_WIDTH
            height: root.LABEL_HEIGHT
            halign: "left"
            valign: "middle"
            text_size: (self.width, self.height)
