#: include reader-tree-view.kv

<BackgroundColor@Widget>
    background_color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BgColorLabel@Label+BackgroundColor>
    background_color: (0, 0, 0, 0)


<MainScreen>:
    orientation: 'vertical' if self.width < self.height else 'horizontal'
    size_hint: (1, 1)
    reader_contents: scroll_view
    intro_text: intro_text_box
    reader_contents_tree: tree_view
    title_page_button: title_page_button_id
    title_page_image: title_page_image_id
    main_title: main_title_id
    title_info: title_info_id
    bottom_view: bottom_view_id

    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"

        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"

            Label:
                size_hint: (0.34, 0.03)

        AnchorLayout:
            anchor_x: "left"
            anchor_y: "bottom"

            canvas.before:
                Color:
                    rgba: root.top_view_image_bg
                Rectangle:
                    source: root.top_view_image
                    pos: self.pos
                    size: self.size

            ScrollView:
                id: scroll_view
                size_hint: (1, 0.97)

                do_scroll_x: False
                do_scroll_y: True
                always_overscroll: False
                effect_cls: "ScrollEffect"
                scroll_type: ["bars", "content"]

                bar_color: (0.8, 0.8, 0.8, 1)
                bar_inactive_color: (0.8, 0.8, 0.8, 0.8)
                bar_width: dp(5)

                ReaderTreeView:
                    id: tree_view
                    padding: dp(50)
                    indent_start: dp(50)
                    background_color: (0,1,0,1)

    AnchorLayout:
        anchor_x: "right"
        anchor_y: "center"

        TextInput:
            id: intro_text_box
            multiline: True
            readonly: True
            opacity: 0.0
            size_hint: (1, 1)

        BoxLayout:
            id: bottom_view_id
            orientation: "vertical"
            opacity: 1

            canvas.before:
                Color:
                    rgba: root.bottom_view_before_image_bg

                #Line:
                #    width: root.TITLE_INFO_BORDER_WIDTH
                #    joint: 'miter'
                #    rectangle:
                #        self.x + root.TITLE_INFO_BORDER_WIDTH, self.y + root.TITLE_INFO_BORDER_WIDTH, \
                #        self.width - 2 * root.TITLE_INFO_BORDER_WIDTH, self.height - 2 * root.TITLE_INFO_BORDER_WIDTH - dp(20)
                Rectangle:
                    source: root.bottom_view_before_image
                    pos: self.pos
                    size: self.size

            canvas.after:
                Color:
                    rgba: root.bottom_view_after_image_bg
                Rectangle:
                    source: root.bottom_view_after_image
                    pos: self.pos
                    size: self.size

            BgColorLabel:
                text: "before title filler"
                background_color: (1, 0, 1, 1)
                opacity: root.DEBUG_BACKGROUND_OPACITY
                size_hint: (1, 0.1)
                text_size: (self.width, self.height)

            BgColorLabel:
                id: main_title_id
                text: "[b]The Colossalest Surprise \nQuiz Show[/b]"
                background_color: (1, 0, 0, root.DEBUG_BACKGROUND_OPACITY)
                markup: True
                color: (1, 1, 0, 1)
                font_name: "Carl Barks Script"
                font_size: sp(30)
                multiline: True
                size_hint: (1, 0.2)
                pos_hint: {"y": 0.2}
                halign: "center"
                valign: "top"
                text_size: (self.width, self.height)

            BoxLayout:
                orientation: "horizontal"
                background_color: (0, 1, 0, 0)

                BoxLayout:
                    orientation: "vertical"

                    BgColorLabel:
                        text: "before title info filler"
                        background_color: (0, 0, 1, 1)
                        opacity: root.DEBUG_BACKGROUND_OPACITY
                        size_hint: (1, 0.1)
                        halign: "left"
                        valign: "top"
                        text_size: (self.width, self.height)

                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: (1, 0.3)

                        BgColorLabel:
                            text: "left1"
                            background_color: (1.0, 1.0, 0.0, 0.5)
                            opacity: root.DEBUG_BACKGROUND_OPACITY
                            size_hint: (0.07, 1)
                            halign: "left"
                            valign: "top"
                            text_size: (self.width, self.height)

                        BgColorLabel:
                            id: title_info_id
                            text: "1st Issue:   [b]Comics & Stories 104, Oct 1949[/b]\nSubmitted: [b]10th January, 1949[/b]\nSource:       Fantagraphics CBDL, Vol 7"
                            background_color: 0, 1, 0, root.DEBUG_BACKGROUND_OPACITY
                            markup: True
                            multiline: True
                            size_hint: (0.93, 1)
                            halign: "left"
                            valign: "top"
                            text_size: (self.width, self.height)

                    BoxLayout:
                        orientation: "horizontal"
                        size_hint: (1, 0.5)

                        BgColorLabel:
                            text: "left2"
                            background_color: (0.5, 1.0, 0.0, 0.5)
                            opacity: root.DEBUG_BACKGROUND_OPACITY
                            size_hint: (0.07, 1)
                            halign: "left"
                            valign: "top"
                            text_size: (self.width, self.height)

                        BgColorLabel:
                            text: "Blah blah blah\netc etc etc"
                            background_color: 0, 1, 1, root.DEBUG_BACKGROUND_OPACITY
                            multiline: True
                            size_hint: (0.93, 1)
                            halign: "left"
                            valign: "top"
                            text_size: (self.width, self.height)

                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    size_hint_y: 0.85

                    BoxLayout
                        orientation: "horizontal"

                        BgColorLabel:
                            text: "left of title image filler"
                            background_color: (1.0, 1.0, 0.0, 0.5)
                            opacity: root.DEBUG_BACKGROUND_OPACITY
                            size_hint: (0.1, 0.9)
                            text_size: (self.width, self.height)

                        BoxLayout
                            orientation: "vertical"

                            BgColorLabel:
                                text: "top of button filler"
                                background_color: (1.0, 1.0, 0.0, 0.5)
                                opacity: root.DEBUG_BACKGROUND_OPACITY
                                size_hint: (1, 0.1)
                                text_size: (self.width, self.height)

                            Button:
                                canvas.before:
#                                    Color:
#                                        rgba: 1, 0, 0, 0
#                                    Line:
#                                        width: 2
#                                        rectangle: self.x, self.y, self.width, self.height
                                    Color:
                                        rgba: 0, 0, 1, 0.85
                                    BoxShadow:
                                        inset: False
                                        pos: self.pos
                                        size: self.size
                                        offset: 0, 0
                                        spread_radius: 1, 1
                                        border_radius: 0, 0, 0, 0
                                        blur_radius: 20 if self.state == "normal" else 10

                                id: title_page_button_id
                                background_color: (0.3, 0.3, 1.0, 0.5)
#                                background_normal: "/tmp/1-01.jpg"
#                                background_down: ""
#                                background_disabled_down: "/tmp/1-01.jpg"
                                visible: True
                                size_hint_y: 1
                                size_hint_x: 1 if self.visible else 0
                                opacity: 1 if self.visible else 0
                                disabled: not self.visible
                                halign: "left"
                                valign: "top"
                                text_size: (self.width, self.height)
                                on_press: root.image_pressed()

                                TitlePageImage:
                                    id: title_page_image_id
                                    x: self.parent.x + 0.5 * (1.0 - self.TITLE_IMAGE_X_FRAC_OF_PARENT) * self.parent.size[0]
                                    y: self.parent.y + 0.5 * (1.0 - self.TITLE_IMAGE_Y_FRAC_OF_PARENT) * self.parent.size[1]
                                    size: (self.TITLE_IMAGE_X_FRAC_OF_PARENT * self.parent.size[0], self.TITLE_IMAGE_Y_FRAC_OF_PARENT * self.parent.size[1])
                                    source: "/tmp/1-01.jpg"
                                    fit_mode: "cover"
                                    opacity: 1 if self.parent.visible else 0
                                    on_press: root.image_pressed()
                                    #minimum_height: self.height
                                    #minimum_width: self.width

                        BgColorLabel:
                            text: "right of title image filler"
                            background_color: (1.0, 1.0, 0.0, 0.5)
                            opacity: root.DEBUG_BACKGROUND_OPACITY
                            size_hint: (0.12, 0.8)
                            text_size: (self.width, self.height)

            BgColorLabel:
                text: "bottom of title image filler"
                background_color: (0.0, 1.0, 1.0, 0.5)
                opacity: root.DEBUG_BACKGROUND_OPACITY
                size_hint: (1, 0.07)
                #height: root.TITLE_INFO_BORDER_WIDTH
                text_size: (self.width, self.height)
