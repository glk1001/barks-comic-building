#: include reader-tree-view.kv

<MainScreen>:
    orientation: "horizontal"
    size_hint: (1, 1)
    reader_contents: scroll_view
    intro_text: intro_text_box
    reader_contents_tree: tree_view
    title_page: title_page_image

    ScrollView:
        id: scroll_view
        size_hint: (0.3, 0.95)
        pos_hint: {"x": 0.025, "top": 0.95}

        do_scroll_x: False
        do_scroll_y: True
        always_overscroll: False
        effect_cls: "ScrollEffect"
        scroll_type: ["bars", "content"]

        bar_color: (0.8, 0.8, 0.8, 1)
        bar_inactive_color: (0.8, 0.8, 0.8, 0.8)
        bar_width: dp(5)

        ReaderTreeView:
            id: tree_view
            #padding: dp(50)
            #indent_start: dp(50)

    TextInput:
        id: intro_text_box
        multiline: True
        readonly: True
        opacity: 0.0
        size_hint: (0.66, 1)
        pos_hint: {"x": 0.33, "top": 1.0}

    FloatLayout:
        size_hint: (0.66, 1)

        TitlePageImage:
            background_color: (0.0, 1.0, 0.0, 1.0)
            id: title_page_image
            source: "/tmp/1-01.jpg"
            fit_mode: "scale-down"
            allow_stretch: True
            size_hint: (0.5, 0.85)
            pos_hint: {"x": 0.75, "top": 0.95}
            #pos_hint : {'center_x': 0.5, 'center_y': 0.09}
            on_press: root.image_pressed()
